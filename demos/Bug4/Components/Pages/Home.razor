@page "/"
<PageTitle>Home</PageTitle>

<h1>BlazorDeveloperTools RenderFragment Test</h1>

<h2>Test Case 1: Simple RenderFragments with Nested Components</h2>
<Bug4Component>
    <ContentTitle>
        <IconComponent Color="#FF5722" Label="Title Icon" />
        My Custom Title
    </ContentTitle>
    <ContentBody>
        <p>This is the body content with a nested component:</p>
        <NestedCardComponent 
            Title="Nested Card in RenderFragment" 
            Description="This component should have markers"
            >
            <p>Even more nested content inside the NestedCardComponent!</p>
        </NestedCardComponent>
    </ContentBody>
</Bug4Component>

<h2>Test Case 2: Complex Nesting</h2>
<Bug4Component>
    <ContentTitle>
        <strong>Complex Title with Multiple Components</strong>
        <div style="display: flex; gap: 10px; margin: 10px 0;">
            <IconComponent Color="red" />
            <IconComponent Color="green" />
            <IconComponent Color="blue" />
        </div>
    </ContentTitle>
    <ContentBody>
        <div style="background: #f0f0f0; padding: 15px;">
            <h4>Multiple Nested Components Test</h4>
            
            <NestedCardComponent 
                Title="First Card" 
                />
            
            <NestedCardComponent 
                Title="Second Card" 
               >
                <IconComponent Label="Nested icon inside nested card!" />
            </NestedCardComponent>
            
            <button @onclick="HandleTestClick" class="btn btn-primary">
                Test Button (Not a component, shouldn't be marked)
            </button>
        </div>
    </ContentBody>
</Bug4Component>

<h2>Expected Behavior</h2>
<div style="background: #e8f5e9; padding: 15px; margin: 20px 0; border-radius: 5px;">
    <h4>Should Have Markers:</h4>
    <ul>
        <li>✅ Bug4Component (the parent component)</li>
        <li>✅ IconComponent (all instances)</li>
        <li>✅ NestedCardComponent (all instances)</li>
    </ul>
    
    <h4>Should NOT Have Markers:</h4>
    <ul>
        <li>❌ ContentTitle (RenderFragment parameter)</li>
        <li>❌ ContentBody (RenderFragment parameter)</li>
        <li>❌ Regular HTML elements (div, button, etc.)</li>
    </ul>
</div>

@code {
    private void HandleTestClick()
    {
        Console.WriteLine("Test button clicked - this is not a component!");
    }
}