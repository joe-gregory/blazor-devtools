@* IconComponent.razor - A simple icon component for testing *@

<span class="icon-wrapper" style="display: inline-block; margin: 0 5px;">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="@Color" style="vertical-align: middle;">
        <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z" />
    </svg>
    @if (!string.IsNullOrEmpty(Label))
    {
        <span style="margin-left: 5px;">@Label</span>
    }
</span>

@code {
    [Parameter]
    public string Color { get; set; } = "#1976d2";

    [Parameter]
    public string Label { get; set; } = "";

    protected override void OnInitialized()
    {
        // Some logic to make it a "real" component
        Console.WriteLine($"IconComponent initialized with color: {Color}");
    }
}