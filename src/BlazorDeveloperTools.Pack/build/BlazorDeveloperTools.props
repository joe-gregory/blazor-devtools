<Project>
	<!-- Only hook into Razor SDK if not already done -->
	<PropertyGroup Condition="'$(BlazorDeveloperToolsImported)'!='true'">
		<!-- Mark that we've imported to prevent duplicates -->
		<BlazorDeveloperToolsImported>true</BlazorDeveloperToolsImported>

		<!-- Hook into Razor SDK -->
		<CustomAfterRazorSdkTargets>$(MSBuildThisFileDirectory)BlazorDeveloperTools.targets</CustomAfterRazorSdkTargets>

		<!-- Ensure CSS isolation is enabled -->
		<ScopedCssEnabled>true</ScopedCssEnabled>
		<EnableDefaultScopedCssItems>true</EnableDefaultScopedCssItems>
	</PropertyGroup>
</Project>